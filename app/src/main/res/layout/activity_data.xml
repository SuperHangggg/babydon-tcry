<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a279095640.babycry.data">

    <TextView
        android:text="已采集数据"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/data_1"
        android:textSize="100px"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="男："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/man"
        android:textSize="60px"
        android:textColor="#000000"
        android:layout_below="@+id/data_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="女："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/woman"
        android:textSize="60px"
        android:textColor="#000000"
        android:layout_below="@+id/man"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0例"
        android:textSize="60px"
        android:gravity="center_vertical|right"
        android:ems="10"
        android:id="@+id/recorded_man"
        android:layout_below="@+id/data_1"
        android:layout_above="@+id/recorded_woman"
        android:layout_alignLeft="@+id/data_1"
        android:layout_alignStart="@+id/data_1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0例"
        android:textSize="60px"
        android:gravity="center_vertical|right"
        android:ems="10"
        android:id="@+id/recorded_woman"
        android:layout_alignBottom="@+id/woman"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/man"
        android:layout_alignLeft="@+id/recorded_man"
        android:layout_alignStart="@+id/recorded_man" />

</RelativeLayout>
